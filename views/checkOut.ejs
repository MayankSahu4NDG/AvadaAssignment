<%- include('partials/header') %>
<%- include('partials/navbar') %>
<h1 style="margin-bottom: 15px;">Work in Progress</h1>

<div class="container">
    <div class="row">
        <div class="col-8" style="background: white;">
            <div>
                <button type="button" class="collapsible">Step 1: LOGIN OR SIGNUP</button>
                <div class="content">
                    <div class="row">
                        <div class="col-7">
                            <form action="#">
                                <input type="text" class="form-control" placeholder="email/ mobile no." style="padding: 5px; width: 70%;">
                                <input type="password" class="form-control" placeholder="password" style="padding: 5px; width: 60%; margin-top: 5px;">
                                <p style="font-size: small;">By continuing, you agree to our <a href="#">Terms of use</a> and <a href="">Privacy Policy</a>.</p>
                                <button class="btn btn-success rounded" type="submit">CONTINUE</button>
                            </form>
                        </div>
                        <div class="col-5" style="color: #575757c2; font-size: small;">
                            <p style="font-size: medium;">Advantages of our security login</p>
                            <span><i class="icons fas fa-truck-moving"></i> Easily track orders, hassle free returns</span><br>
                            <span><i class="icons fas fa-exclamation-circle"></i> Get relevant alerts and recommendation</span><br>
                            <span><i class="icons fas fa-star-half-alt"></i> Wishlist, reviews, ratings and more.</span>
                        </div>
                    </div>
                </div>  
            </div>
            <div>
                <button type="button" class="collapsible">Step 2: DELIVERY ADDRESS</button>
                <div class="content">
                    <input type="text"  class="form-control" placeholder="Address line 1">
                    <input type="text"  class="form-control" placeholder="Address line 2"><br>
                    <input type="text"  class="form-control" placeholder="State">
                    <input type="text"  class="form-control" placeholder="Pin code">
                </div>
            </div>
            <div>
                <button type="button" class="collapsible">Step 3: PAYMENT OPTIONS</button>
                <div class="content">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                        <label class="form-check-label" for="exampleRadios1">
                          UPI Payments
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                        <label class="form-check-label" for="exampleRadios1">
                          Pay through Wallets
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                        <label class="form-check-label" for="exampleRadios1">
                          Credit / Debit / AtM Card
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                        <label class="form-check-label" for="exampleRadios1">
                          Net Banking
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                        <label class="form-check-label" for="exampleRadios1">
                          Cash on Delivery
                        </label>
                    </div>
                </div>
            </div>
            <button class="btn btn-success rounded" type="submit" style="margin: 0px 40% 40px 40%;">PROCEED</button>
        </div>
        <div class="col-4">
            <img src="images/priceImg.png" alt="">
        </div>
    </div>
</div>


